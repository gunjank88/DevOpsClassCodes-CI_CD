pipeline{
    tools{
        jdk 'MY JAVA'
        maven 'maven'
    }
    agent any
    stages{
        stage('Checkout on git'){
            agent any
            steps{
                git 'https://github.com/gunjank88/DevOpsClassCodes-CI_CD.git'
            }
        }
        stage('Compile'){
            agent any
            steps{
                bat 'mvn compile'
            }
        }
        stage('CodeReview'){
            agent any
            steps{
                bat 'mvn pmd:pmd'
            }
        }
        stage('UnitTest'){
            agent any
            steps{
                bat 'mvn test'
            }
        }
       // stage('MetricCheck'){
            agent any
            steps{
                bat 'mvn cobertura:cobertura -Dcobertura.report.format=xml'
            }
        }//
        stage('Package'){
            agent any
            steps{
                bat 'mvn package'
            }
        }
    }
}
